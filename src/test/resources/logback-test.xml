<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define the default logging level -->
    <root level="INFO">
        <appender-ref ref="COLORED_CONSOLE"/>
    </root>

    <!-- Console Appender with color-coded output -->
    <appender name="COLORED_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %highlight(%msg) %n
            </pattern>
        </encoder>
    </appender>

</configuration>